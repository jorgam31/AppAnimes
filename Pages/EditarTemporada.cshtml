else
{
    if (@ViewData["NombreTemporada"] == null)
    {
        <h2>Editar Temporada del Anime @ViewData["NombreAnime"]</h2>
        <h4>Esta temporada no tiene nombre al ser su primera temporada es llamada igual que la serie</h4>
    }
    else
    {

        <h2>Editar Temporada del Anime @ViewData["NombreAnime"]</h2>
        <h3>Nombre Temporada : @ViewData["NombreTemporada"]</h3>
    }
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
          <div class="form-group">
            <label asp-for="Anime.Nombre"></label>
            <input asp-for="Anime.Nombre" class="form-control"/>
        </div>
        <input type="hidden" asp-for="Temporada.TemporadaId" asp-route-AnimeId="@Model.Anime.AnimeId" class="form-control" />
        
        <div class="form-group">
            <label asp-for="Temporada.NumeroTemporada"></label>
            <input asp-for="Temporada.NumeroTemporada" class="form-control disabled" />
        </div>

        @if (@ViewData["NombreTemporada"] != null)
        {

            <div>
                <label asp-for="Temporada.NombreTemporada"></label>
                <input asp-for="Temporada.NombreTemporada" class="form-control" />
            </div>
        }
               
      

        <div class="form-group">
            <label asp-for="Temporada.Tipo"></label>
            <input asp-for="Temporada.Tipo" class="form-control " />
        </div>
        <div class="form-group">
            <label asp-for="Temporada.Estado"></label>
            <input asp-for="Temporada.Estado" class="form-control " />
        </div>
        <div class="form-group">
            <label asp-for="Temporada.TemporadaEstreno"></label>
            <input asp-for="Temporada.TemporadaEstreno" class="form-control " />
        </div>
        <input type="submit" value="Editar" class="btn btn-primary" />
    </form>

}

